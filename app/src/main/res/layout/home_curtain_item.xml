<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curtain_bg"
    android:padding="0.8dp"
    >
<com.crowd.curtain.ui.customview.RoundCornerImageView
    xmlns:fix="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iv_curtain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:src="@mipmap/curtai"
    app:layout_constraintTop_toTopOf="parent"
    fix:ratio="1"
    />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#696067"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_curtain"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="编号-54462098"
        android:textSize="12sp"
        android:textColor="#a0a0a0"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />
</android.support.constraint.ConstraintLayout>