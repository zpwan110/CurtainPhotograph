<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <include
        android:id="@+id/user_top"
        layout="@layout/title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:orientation="horizontal"
        android:background="@drawable/border_shadow_bottom"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        >
        <base.widget.edittext.ClearEditText
            xmlns:clear="http://schemas.android.com/apk/res-auto"
            clear:clear_drawable="@mipmap/ico_delete_all"
            android:id="@+id/et_old_pwd"
            style="@style/login_input_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:orientation="horizontal"
        android:background="@drawable/border_shadow_bottom"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        >
        <base.widget.edittext.ClearEditText
            android:layout_weight="1"
            xmlns:clear="http://schemas.android.com/apk/res-auto"
            clear:clear_drawable="@mipmap/ico_delete_all"
            android:id="@+id/et_new_pwd"
            style="@style/login_input_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_height"
        android:orientation="horizontal"
        android:background="@drawable/border_shadow_bottom"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        >
        <base.widget.edittext.ClearEditText
            android:layout_weight="1"
            xmlns:clear="http://schemas.android.com/apk/res-auto"
            clear:clear_drawable="@mipmap/ico_delete_all"
            android:id="@+id/et_again_pwd"
            style="@style/login_input_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/login_btn_bg"
        android:text="确定"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="45dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        />
</LinearLayout>