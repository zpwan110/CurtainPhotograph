<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/pager_line"
        android:layout_below="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#f1f4f6"
        />
<LinearLayout
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/tv_top_text"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#c2c2c2"
        android:text="窗帘编号"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ico_date"
        android:scaleType="center"
        />
    <TextView
        android:id="@+id/tv_top_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#c2c2c2"
        tools:text="2018.02.02"/>

</LinearLayout>
<TextView
    android:id="@+id/tv_desc"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:textSize="17sp"
    android:textColor="#000000"
    tools:text="罗马帘跟家里的欧式窗很配，完全没有违和感！下次还来"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"/>
    <HorizontalScrollView
        android:id="@+id/hl_images"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none">
<LinearLayout
    android:id="@+id/ll_images"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

</LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
    android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/faile" />
        <TextView
            android:id="@+id/tv_bottom_text"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#c2c2c2"
            android:text="未通过原因"
            tools:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_date"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/tv_bottom_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#c2c2c2"
            tools:text="2018.02.02"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
<TextView
    android:id="@+id/tv_faile_desc"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ff0202"
    android:textSize="17sp"
    tools:text="照片格式不正确"/>
<TextView
    android:id="@+id/tv_upload"
    android:layout_width="74dp"
    android:layout_height="34dp"
    android:textColor="#ffffff"
    android:textSize="15sp"
    android:text="重新上传"
    android:gravity="center"
    android:background="@drawable/login_btn_bg"/>
<TextView
    android:id="@+id/tv_delete"
    android:layout_width="74dp"
    android:layout_height="34dp"
    android:textColor="#000000"
    android:gravity="center"
    android:textSize="15sp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/null_btn_bg"
    android:text="删除"/>
</LinearLayout>

</LinearLayout>