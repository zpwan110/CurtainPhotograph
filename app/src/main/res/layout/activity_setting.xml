<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <include
        android:id="@+id/user_top"
        layout="@layout/title_layout"/>
    <RelativeLayout
        android:id="@+id/rl_account"
        app:layout_constraintTop_toBottomOf="@+id/user_top"
        app:layout_constraintBottom_toTopOf="@+id/user_line1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_account"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center"
            tools:text="158568988009"
            android:textColor="#000000"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_right"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_unlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="31dp"
            android:gravity="center"
            android:text="未登录"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/btn_tologin"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginTop="18dp"
            android:background="@drawable/login_btn_bg"
            android:text="点击登录"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="27dp"
            />
    </LinearLayout>


    <View
        android:id="@+id/user_line1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"
        />
    <LinearLayout
        android:id="@+id/ll_about"
        app:layout_constraintTop_toBottomOf="@+id/user_line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_about"
            android:scaleType="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center|left"
            android:text="关于我们"
            android:textColor="#000000"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_right"
            android:scaleType="center"/>
    </LinearLayout>
    <View
        android:id="@+id/user_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_about"
        android:background="#eeeeee"
        />
    <LinearLayout
        android:id="@+id/ll_feed"
        app:layout_constraintTop_toBottomOf="@+id/user_line2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_message"
            android:scaleType="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center|left"
            android:text="意见反馈"
            android:textColor="#000000"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_right"
            android:scaleType="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update"
        app:layout_constraintTop_toBottomOf="@+id/user_line2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_update"
            android:scaleType="center"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center|left"
            android:text="当前版本"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/ver_des"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center|left"
            android:text="已是最新"
            android:textColor="#C6C9D2"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_right"
            android:scaleType="center"/>
    </LinearLayout>
    <View
        android:id="@+id/user_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_update"
        android:background="#eeeeee"
        />
    <LinearLayout
        android:id="@+id/ll_message"
        app:layout_constraintTop_toBottomOf="@+id/user_line4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_tongzhi"
            android:scaleType="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center|left"
            android:text="消息"
            android:textColor="#000000"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_right"
            android:scaleType="center"/>
    </LinearLayout>
    <View
        android:id="@+id/user_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_about"
        android:background="#eeeeee"
        />
    <LinearLayout
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/ll_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:gravity="center">
        <TextView
            android:id="@+id/btn_loginOut"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginTop="18dp"
            android:background="@drawable/login_btn_bg"
            android:text="退出登录"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="27dp"
            />
    </LinearLayout>
</LinearLayout>