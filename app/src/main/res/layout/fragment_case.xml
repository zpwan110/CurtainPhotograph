<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <include
        android:id="@+id/topTitle"
        layout="@layout/title_layout" />
    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_below="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_uploaded"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#379dfd"
            android:textSize="18sp"
            android:text="已上传"/>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#e6e8ed"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_waiting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#5d5d5d"
            android:textSize="18sp"
            android:text="待审核"/>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#e6e8ed"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_unadopt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#5d5d5d"
            android:textSize="18sp"
            android:text="未通过"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_cursor"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@mipmap/ico_cours" />
    </RelativeLayout>

    <com.crowd.curtain.ui.customview.NoScrollViewPager
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_cursor"
        >

    </com.crowd.curtain.ui.customview.NoScrollViewPager>
</RelativeLayout>
