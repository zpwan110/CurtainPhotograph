<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.crowd.curtain.ui.activity.AboutUsActivity">
    <include
        android:id="@+id/user_top"
        layout="@layout/title_layout"/>
    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_app_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center"
        tools:text="1.0.1"/>
    <TextView
        android:id="@+id/tv_connect_us"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:text="联系我们"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="#C6C9D2"
        android:gravity="center|left"
        android:text="地址："/>
    <TextView
        android:id="@+id/tv_address_value"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:text="浙江省绍兴市柯桥区钱清镇白马山"/>
    <TextView
        android:id="@+id/tv_kefu"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="#C6C9D2"
        android:gravity="center|left"
        android:text="客服热线："/>
    <TextView
        android:id="@+id/tv_kefu_value"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:text="86-13958985798"/>

    <TextView
        android:id="@+id/tv_copyright_owner"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="20dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:text="版权所有：绍兴古香祺纺织有限公司"/>
    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="20dp"
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:text="©️2018 Shao Xing Gu Xiang Qi "/>

</LinearLayout>